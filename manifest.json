{
  "name": "Wordle Betterment Suite",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "WBS ehances the Wordle experience",

  "icons": {
    "16": "styles/icon16.png",
    "128": "styles/icon128.png"
  },

  "content_scripts": [{
    "matches": ["https://www.nytimes.com/games/wordle/*"],
    "js": ["scripts/main.js"],
    "run_at": "document_end"
  }],

  "web_accessible_resources": [{
    "resources": ["scripts/features.js"],
    "matches": ["<all_urls>"]
  }],

  "permissions": [
    "activeTab"
  ]
}
